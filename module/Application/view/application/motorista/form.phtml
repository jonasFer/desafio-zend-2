<script>
$(document).ready(function(){
    const isEdit = $("#form-motorista").attr('data-edit');

    $('#form-motorista').validate({
        rules: {
            'nome': {
                required: true,
                maxlength: 200
            },
            'cpf': {
                required: true,
                cpf: true,
            },
            'rg': {
                required: true,
                maxlength: 20,
                number: true
            },
            'telefone': {
                required: true
            },
            'veiculo': {
                required: true
            }
        }
    });

    $("#form-motorista").submit(function(e) {
        e.preventDefault();
        var form = $(this);
        if (form.valid()) {
            var actionUrl = form.attr('action');
            $("#btn-salvar").attr('disabled', true);
            $.ajax({
                type: "POST",
                url: actionUrl,
                dataType: 'json',
                data: form.serialize(),
                success: function() {
                    $("#btn-salvar").attr('disabled', false);
                    if (isEdit) {
                        Swal.fire({
                            title: 'Registro salvo!',
                            icon: 'success'
                        }).then((result) => {
                            window.location = '/motorista';
                        })
                    } else {
                        Swal.fire({
                            title: 'Registro salvo!',
                            showDenyButton: true,
                            confirmButtonText: 'Sim',
                            denyButtonText: 'NÃ£o',
                            text: 'Deseja cadastrar um novo motorista?',
                            icon: 'success'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.each (function(){
                                    this.reset();
                                });
                                $("#selectpicker").val('default');
                                $("#selectpicker").selectpicker("refresh");
                            } else if (result.isDenied) {
                                window.location = '/motorista';
                            }
                        })
                    }
                },
                error: function () {
                    $("#btn-salvar").attr('disabled', false);
                    Swal.fire({
                        title: 'Ocorreu um erro, tente novamente em instantes!',
                        icon: 'error'
                    }).then((result) => {
                        window.location = '/motorista';
                    })
                }
            });
        }
    });
});
</script>

